<link rel="stylesheet" href="/css/comment.css">
<div id="comment-container-<%-comment._id%>" class="post-comment-box">
    <li>
        <p class="comment">
          <div class="comment-top">

            <div class="user-name">
              <%if(comment.user.avatar){%>
                <img class='img' id="blah" src="<%= comment.user.avatar%>" alt="your image" width="30"/>
              <%}else{%>
                <img class='img' id="blah" src="/images/doge.png" alt="your image" width="30"/>
              <%}%>
              <%= comment.user.name%>
            </div>
            
            <div class="delete-box">
              <% if((locals.user && locals.user.id==comment.user.id) || (locals.user && locals.user.id==post.user.id) ){%>
                <div class="delete-button">
                  <a class="delete-comment-button-jq" href="/comments/destroy/<%=comment._id%>">x</a>
                </div>
                <% }%>
            </div>

          </div>
            <div class="comment-content">
              <%= comment.content%>
            </div>
          </p>
          <div>
            <!-- like box -->
            <%if (locals.user){ %>
              <a class="toggle-like-button" data-likes="<%= comment.likes.length%>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                <%= comment.likes.length%> &hearts;
              </a>
              <%} else{ %>
                <%= comment.likes.length%> &hearts;
            <%}%>
          </div>
    </li>
</div>