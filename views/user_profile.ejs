
    <link rel="stylesheet" href="/css/user_profile.css">
    <p><%= title%></p>

    <img src="<%=profile_user.avatar%>" alt="<%=profile_user.name%>" width="100">

    <% if(profile_user.id==user.id){%>
        <!-- if user matches then show the form -->
        <form action="/users/update/<%=profile_user.id%>" enctype="multipart/form-data" method="POST" >
            <div class="box">
                <div >
                    <input type="file" name="avatar" placeholder="Profile Picture" accept="image/png, image/gif, image/jpeg" onchange="readURL(this);" >
                <img id="blah" src="http://placehold.it/180" alt="your image" width="100"/>
                </div>

                <div class="item">
                    <label for="name">Name : </label>
                <input id="name" type="text" name="name" value="<%=profile_user.name%>" placeholder="Your name" required>
                </div>

                <div class="item">
                    <label for="emial">Email : </label>
                <input id="email" type="email" name="email" value="<%=profile_user.email%>" placeholder="Your name" required> 
                </div>
                
            </div>
            <input type="submit" value="update">
        </form>
    <% }else{%>
        <!-- just show the profile  -->
        <div class="box">
            <div class="item">
                <label for="name">Name : </label>
                <p id="name"> <%= profile_user.name%></p>
            </div>
            <div class="item">
                <label for="email">Email : </label>
                
            </div>
            
        </div>
        
        
    <% }%>

